<div class="container">
  <div class="row d-flex">
    <div class="col-xs-12 btn-create my-3 text-center">
      <%= link_to  "Create an album", new_album_path %>
    </div>
  </div>
  <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Twitter</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each.with_index do |artist, index| %>
      <tr>
        <td><%= artist.first['twitter'] %></td>
        <td><%= artist.first['name'] %></td>
      </tr>   
    <% end %>
  </tbody>
</table>
</div>